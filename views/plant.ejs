<body>
    <div class="wrapper">
        <header>
            <% include partials/header.ejs %>
        </header>

        <main>
            <script type="module" src="/scripts/fill_out_plant_page.mjs"></script>
            <div class="background-section">
                <section class="welcome-section">
                    <article class="image-article">
                        <img id="plant_image" src="/images/cactus.jpeg" alt="Plant Profile Image">
                        <button class="top-button" id="change_name_button">Change Name</button>
                    </article>
                    <article class="text-article">
                        <h1 id="plant_name">Plant name</h1>
                        <div id="name_input" style="display: none;">
                            <input type="text" id="new_plant_name" placeholder="Enter new plant name">
                            <button id="submit_name_button">Submit</button>
                        </div>
                        <select id="identifyStatus" name="identify_status">
                            <option value="Completed">Completed</option>
                            <option value="In-Progress">In-Progress</option>
                            <option value="Unknown">Unknown</option>
                        </select>
                        <p id="plant_description">Proin ut vehicula elit. Phasellus ullamcorper vitae risus at sollicitudin. Aenean pretium magna ut interdum fringilla.</p>
                        <p id = "db_link">Discover more at: </p>
                        <p id="plant_abstract"> Abstract: </p>
                    </article>
                </section>
            </div>

            <div class="plant-info">
                <section class="info-section">
                    <div class="info-block">
                        <h2 id="date_time_seen">Date and time seen:</h2>
                        <div id="map" class="map"></div>
                    </div>
                    <div class="info-block">
                        <p id="width">Width:</p>
                        <p id="height">Height:</p>
                        <p id="has_flowers">Has flowers:</p>
                        <p id="has_fruit">Has fruit:</p>
                        <p id="has_seeds">Has seeds:</p>
                        <p id="sun_exposure">Sun exposure:</p>
                        <p id="plant_colour">Plant color:</p>
                        <p id="flower_colour">Flower color:</p>
                    </div>
                </section>
                <section class="chat-section">
                    <div id="history" class="boxed">
                    </div>
                    <div id="initial_form" style="display: block">
                        <p>Please enter your username to join the chat</p>
                        <form onsubmit="return false;">
                            <p><label for="username">Your name:</label>
                                <input type="text" id="username" name="username">
                            </p>
                            <button id="connect">Connect</button>
                        </form>
                    </div>
                    <div id="chat_interface" style="display: none">
                        <div>
                            <div id="who_you_are" style="display: inline"></div>, you are in room: <div id="in_room" style="display: inline"></div>
                        </div>
                        <div id="history" class="boxed"></div>
                        <div id="input" class="bottom boxed">
                            <form onsubmit="return false;" style="width: 100%">
                                <p>
                                    <label for="name"> chat: </label>
                                    <input type="text" id="chat_input" name="chat_input" style="width: 80%">
                                    <button id="chat_send">Send</button>
                                </p>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </main>

        <footer>
            <% include partials/footer.ejs %>
        </footer>
    </div>

    <script type="module" src="/scripts/chat.mjs"></script>
</body>
